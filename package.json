{
	"private": true,
	"scripts": {
		"prepare": "sh -c 'if [ \"$CI\" != \"true\" ]; then husky; fi'",
		"start": "pnpm --filter client start",
		"config:validate": "pnpm --filter client config:validate",
		"format": "biome format --write",
		"biome:ci": "biome ci",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:cover": "vitest run --coverage",
		"dependency-tree": "pnpm run -r dependency-tree"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@tsconfig/node22": "^22.0.2",
		"@types/qrcode": "^1.5.5",
		"@types/supertest": "^6.0.3",
		"@vitest/coverage-v8": "^3.2.4",
		"husky": "^9.1.7",
		"madge": "^8.0.0",
		"supertest": "^7.1.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	},
	"packageManager": "pnpm@10.15.0"
}
