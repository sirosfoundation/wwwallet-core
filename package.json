{
	"private": true,
	"scripts": {
		"prepare": "sh -c 'if [ \"$CI\" != \"true\" ]; then husky; fi'",
		"dev": "concurrently --kill-others 'pnpm:core:dev' 'pnpm:start:client'",
		"build": "pnpm run -r build",
		"start:client": "ts-node --typeCheck --transpileOnly --project ./apps/client/tsconfig.json ./apps/client/main.ts",
		"config:validate:client": "ts-node --typeCheck --transpileOnly --project ./apps/client/tsconfig.json ./apps/client/validateConfig.ts",
		"core:dev": "pnpm --filter @wwwallet/server-core dev",
		"core:build": "pnpm --filter @wwwallet/server-core build",
		"format": "biome format --write",
		"biome:ci": "biome ci",
		"test": "pnpm run -r --reporter-hide-prefix test",
		"test:watch": "pnpm run -r --reporter-hide-prefix test:watch",
		"test:cover": "pnpm run -r --reporter-hide-prefix test:cover",
		"dependency-tree": "pnpm run -r dependency-tree",
		"changeset:add": "changeset add",
		"changeset:version": "dotenv -e .changeset/.env -- changeset version",
		"changeset:tag": "changeset tag",
		"changeset:pre": "changeset pre"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.6",
		"@vitest/coverage-v8": "^3.2.4",
		"concurrently": "^9.2.1",
		"dotenv-cli": "^10.0.0",
		"husky": "^9.1.7",
		"madge": "^8.0.0"
	},
	"dependencies": {
		"@tsconfig/node22": "^22.0.2",
		"@types/qrcode": "^1.5.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3"
	},
	"packageManager": "pnpm@10.15.0"
}
