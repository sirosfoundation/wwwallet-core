{
	"extends": "@tsconfig/node22/tsconfig.json",

	"ts-node": {
		"transpileOnly": true,

		"files": true,

		"compilerOptions": {
			"strict": true,
			"esModuleInterop": true,
			"moduleResolution": "nodenext",
			"target": "esnext",
			"rootDir": "./src",
			"outDir": "./dist"
		}
	},
	"include": ["src/**/*", "tests/**/*", "app.ts", "config.ts"]
}
